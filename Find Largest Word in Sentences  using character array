//To find Largest word in sentance

#include<iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    cin.ignore();
    
    //Declare the size of sentences .
    //Use getline() function for take complete line input.
    //use ignore() function for avoiding buffer.
    
    char arr[n+1];
    cin.getline(arr,n);
    cin.ignore();
    
    int i=0;
    int currlen = 0,maxlen = 0;
    
    while(1)
    {
        if(arr[i] ==' '|| arr[i] == '\0')
        {
            if(currlen>maxlen)
            {
                maxlen=currlen;
                
            }
            currlen=0;
        }
        
        else
        {
        currlen++;
        }
        
        if(arr[i]=='\0')
        {
            break;
        }
        
        i++;
    }
    
    cout<<maxlen<<endl;
    return 0;
    
}
